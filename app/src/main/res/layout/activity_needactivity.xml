<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".needactivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search food nearby :)"
        android:textSize="30sp"
        android:id="@+id/tv1"
        android:textColor="#434343"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/iinf"
        android:drawablePadding="15dp"
        android:text="ENTER YOUR LOCATION" />

    <AutoCompleteTextView
        android:id="@+id/atv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tv2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:hint="enter your location here"
        android:background="@drawable/custom_searchbar"
        android:padding="7dp"
        android:inputType="text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnsearch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_btn"
        android:text="search"
        android:textColor="#ffff" />




</RelativeLayout>